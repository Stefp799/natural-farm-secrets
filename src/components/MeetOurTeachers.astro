<style>
.teachers-section {
  padding: 10px 40px 80px 40px;
  background-color: #f8f9fa;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.teachers-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 10px;
}

.teacher-card {
  background: white;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.teacher-card:hover {
  transform: translateY(-5px);
}

.video-container iframe {
  width: 100%;
  height: 200px;
  border: none;
}

.card-content {
  padding: 15px;
}

.teacher-description {
  font-size: 14px;
  line-height: 1.4;
  color: #000000;
  margin: 0;
}

.origin-link {
  display: inline-block;
  margin-top: 10px;
  color: #16008A;
  text-decoration: none;
  font-weight: 600;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: opacity 0.3s ease;
}

.origin-link:hover {
  opacity: 0.7;
}

/* Responsive */
@media (max-width: 768px) {
  .teachers-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
}

@media (max-width: 1024px) and (min-width: 769px) {
  .teachers-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }
}
</style>