const teacherName = "Tony Busatta";
const teacherRole = "Vermiculture Specialist";
const videoId = "K2FYZfmWJ24"; // Using Peter King video for now - replace with Tony's
const headline = "Italian Farmer Reveals Ancient Earthworm Secrets That Transform Dead Soil Into Living Gold";
const subheadline = "65-year-old Tony Busatta shares generational wisdom that saved his family vineyard";
const story = `For three generations, the Busatta family vineyard struggled with depleted soil and declining harvests. Chemical fertilizers weren't working, and the land seemed tired, lifeless.

Then Tony remembered his grandfather's stories about "the little workers" - earthworms that could transform any soil into black gold. What happened next shocked even him.

"Ecco... my little workers, they teach us patience," Tony says, holding a handful of rich, dark soil teeming with life. "The soil... she knows when she is loved."

In just two seasons, Tony's earthworm integration system transformed 40 acres of struggling vineyard into the most productive land in the region. Now, farmers from across Italy make pilgrimages to learn his methods.

The secret isn't complicated - it's about understanding the relationship between earthworms, soil microbes, and plant roots. Tony discovered that European nightcrawlers, when properly managed, can process organic matter 10 times faster than traditional composting.

"My grandfather, he always said the earth speaks to those who listen," Tony explains while demonstrating his vermiculture bins. "The worms, they are the translators."`;
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Serif:wght@200;300;400&family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <title>{teacherName} - {teacherRole} | Natural Farm Secrets</title>
</head>
<body>
  <!-- Navigation (same as homepage) -->
  <header class="nav">
    <div class="logo">
      <img src="/logonoback250.png" alt="Natural Farm Secrets" />
      <span>Natural Farm Secrets</span>
    </div>
    <nav class="menu">
      <a href="/">Home</a>
      <a href="#teachers">Teachers</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <!-- Article Content -->
  <main class="article-container">
    <div class="article-content">
      <!-- Headline Section -->
      <div class="headline-section">
        <span class="category-tag">{teacherRole}</span>
        <h1 class="headline">{headline}</h1>
        <h2 class="subheadline">{subheadline}</h2>
        <div class="byline">
          <span>By Natural Farm Secrets Team</span>
          <span class="date">Published Today</span>
        </div>
      </div>

      <!-- Featured Video -->
      <div class="featured-media">
        <iframe 
          width="100%" 
          height="400" 
          src={`https://www.youtube.com/embed/${videoId}`}
          title={`${teacherName} - ${teacherRole}`}
          frameborder="0" 
          allowfullscreen>
        </iframe>
        <p class="media-caption">{teacherName} demonstrates his earthworm integration techniques in his Italian vineyard</p>
      </div>

      <!-- Story Content -->
      <div class="story-content">
        {story.split('\n\n').map(paragraph => (
          paragraph.trim() && <p>{paragraph}</p>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="cta-section">
        <h3>Want to Learn Tony's Complete System?</h3>
        <p>Join thousands of farmers transforming their soil with earthworm integration.</p>
        <button class="cta-button">Get the Complete Guide</button>
      </div>

      <!-- Related Teachers -->
      <div class="related-section">
        <h3>More Agriculture Specialists</h3>
        <div class="related-grid">
          <a href="#" class="related-card">
            <div class="placeholder-img">Peter King</div>
            <span>Peter King - Wood Chip Expert</span>
          </a>
          <a href="#" class="related-card">
            <div class="placeholder-img">Master Hun Lee</div>
            <span>Master Hun Lee - Fermentation Specialist</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-section">
        <h4>Latest Videos</h4>
        <div class="sidebar-video">
          <div class="video-thumb">Recent Video</div>
          <p>How to Build Worm Bins</p>
        </div>
        <div class="sidebar-video">
          <div class="video-thumb">Recent Video</div>
          <p>Soil Testing Made Simple</p>
        </div>
      </div>
      
      <div class="sidebar-section">
        <h4>Quick Tips</h4>
        <div class="tip-box">
          <strong>Pro Tip:</strong> Start with 1 pound of earthworms per square foot of growing area.
        </div>
      </div>
    </aside>
  </main>
</body>
</html>

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Nunito Sans', sans-serif;
  line-height: 1.6;
  color: #000;
  background-color: #f8f9fa;
}

/* Navigation */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20px 40px;
  background-color: rgba(22, 0, 138, 0.9);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  height: 80px;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-family: 'Roboto Serif', serif;
  font-weight: 300;
  font-size: 24px;
}

.logo img {
  height: 50px;
  width: auto;
}

.menu {
  display: flex;
  gap: 2rem;
  margin-right: 40px;
}

.menu a {
  font-family: 'Roboto Serif', serif;
  font-weight: 300;
  font-size: 18px;
  color: white;
  text-decoration: none;
  transition: opacity 0.3s ease;
}

.menu a:hover {
  opacity: 0.8;
}

/* Article Layout */
.article-container {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 40px;
  max-width: 1200px;
  margin: 100px auto 0;
  padding: 40px;
}

.article-content {
  background: white;
  padding: 40px;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

/* Headlines */
.headline-section {
  margin-bottom: 30px;
}

.category-tag {
  background: #16008A;
  color: white;
  padding: 6px 16px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 15px;
  display: inline-block;
  border-radius: 4px;
}

.headline {
  font-family: 'Roboto Serif', serif;
  font-weight: 300;
  font-size: 42px;
  line-height: 1.2;
  margin-bottom: 15px;
  color: #000;
}

.subheadline {
  font-family: 'Roboto Serif', serif;
  font-weight: 200;
  font-size: 24px;
  color: #666;
  margin-bottom: 20px;
  font-style: italic;
}

.byline {
  display: flex;
  gap: 20px;
  font-size: 14px;
  color: #999;
  border-bottom: 1px solid #eee;
  padding-bottom: 20px;
  margin-bottom: 30px;
}

/* Media */
.featured-media {
  margin: 30px 0;
}

.featured-media iframe {
  width: 100%;
  height: 400px;
  border-radius: 8px;
}

.media-caption {
  font-size: 14px;
  color: #666;
  font-style: italic;
  margin-top: 10px;
  text-align: center;
}

/* Story Content */
.story-content {
  font-size: 18px;
  line-height: 1.8;
  margin-bottom: 40px;
}

.story-content p {
  margin-bottom: 24px;
}

/* CTA Section */
.cta-section {
  background: #f8f9fa;
  padding: 30px;
  border-radius: 8px;
  text-align: center;
  margin: 40px 0;
}

.cta-section h3 {
  font-family: 'Roboto Serif', serif;
  font-size: 28px;
  margin-bottom: 10px;
  color: #16008A;
}

.cta-button {
  background: #16008A;
  color: white;
  border: none;
  padding: 15px 30px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 6px;
  cursor: pointer;
  margin-top: 15px;
  transition: background-color 0.3s ease;
}

.cta-button:hover {
  background: #120066;
}

/* Related Content */
.related-section {
  margin-top: 40px;
  padding-top: 30px;
  border-top: 2px solid #eee;
}

.related-section h3 {
  font-family: 'Roboto Serif', serif;
  font-size: 24px;
  margin-bottom: 20px;
}

.related-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.related-card {
  display: flex;
  flex-direction: column;
  text-decoration: none;
  color: #000;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
  transition: transform 0.3s ease;
}

.related-card:hover {
  transform: translateY(-5px);
}

.placeholder-img {
  width: 100%;
  height: 120px;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  border-radius: 4px;
  color: #666;
}

/* Sidebar */
.sidebar {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.sidebar-section {
  background: white;
  padding: 25px;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.sidebar h4 {
  font-family: 'Roboto Serif', serif;
  font-size: 20px;
  margin-bottom: 20px;
  color: #16008A;
}

.sidebar-video {
  margin-bottom: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

.video-thumb {
  width: 100%;
  height: 80px;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  border-radius: 4px;
  color: #666;
  font-size: 12px;
}

.tip-box {
  background: #e8f4ff;
  padding: 15px;
  border-radius: 6px;
  border-left: 4px solid #16008A;
  font-size: 14px;
}

/* Responsive */
@media (max-width: 768px) {
  .article-container {
    grid-template-columns: 1fr;
    margin-top: 100px;
    padding: 20px;
  }
  
  .article-content {
    padding: 25px;
  }
  
  .headline {
    font-size: 32px;
  }
  
  .related-grid {
    grid-template-columns: 1fr;
  }
  
  .nav {
    padding: 15px 20px;
  }
  
  .menu {
    gap: 1rem;
    margin-right: 0;
  }
}
</style>