export async function getStaticPaths() {
  // Try different glob patterns to find the file
  try {
    const videos = await Astro.glob('../../content/videos/*.md');
    console.log('Found videos:', videos.length);
    
    return videos.map((video) => ({
      params: { slug: video.frontmatter.slug },
      props: { video },
    }));
  } catch (error) {
    console.error('Glob error:', error);
    return [];
  }
}

const { video } = Astro.props;
const { Content } = video;
const frontmatter = video.frontmatter;
